    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run mocha",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "--colors",
                "-r",
                "ts-node/register",
                "${relativeFile}"
            ],
            "cwd": "${workspaceFolder}",
            "protocol": "inspector"
        }
    ]
}